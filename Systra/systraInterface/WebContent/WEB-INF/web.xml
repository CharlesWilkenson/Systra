<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>systraInterface</display-name>
  <welcome-file-list>
    <welcome-file>/faces/static/signin.xhtml</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>
  <context-param>
        <param-name>org.ajax4jsf.handleViewExpiredOnClient</param-name> 
        <param-value>true</param-value>     
    </context-param>
  <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/faces/static/signin.xhtml</location>
    </error-page>
  <context-param>
    <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
    <param-value>client</param-value>
</context-param>
    <security-constraint>
 <display-name>Users Pages</display-name>
<web-resource-collection>
 <web-resource-name>Protected  Area</web-resource-name>
 <description> Pages protected</description>
 <url-pattern>/faces/Views/*</url-pattern>
 <http-method>GET</http-method>
 <http-method>POST</http-method>
 </web-resource-collection>
 <auth-constraint>
 <role-name>ADMIN</role-name>
  <role-name>FOURNISSEUR</role-name>
   <role-name>SECRETAIRE</role-name>
 </auth-constraint>
 
<user-data-constraint>
 <transport-guarantee>NONE</transport-guarantee>
 </user-data-constraint>
 </security-constraint>
 
   <security-constraint>
 <display-name>AdminPages</display-name>
<web-resource-collection>
 <web-resource-name>Protected  Area</web-resource-name>
 <description> Pages protected</description>
 <url-pattern>/faces/PageAdmin/*</url-pattern>
 <http-method>GET</http-method>
 <http-method>POST</http-method>
 </web-resource-collection>
 <auth-constraint>
 <role-name>ADMIN</role-name>
 </auth-constraint>
 
<user-data-constraint>
 <transport-guarantee>NONE</transport-guarantee>
 </user-data-constraint>
 </security-constraint>

  
	<login-config>
       <auth-method>FORM</auth-method>
       <realm-name>domain_jdbc</realm-name>
       <form-login-config>
        <form-login-page>/faces/static/signin.xhtml</form-login-page>
       <form-error-page>/faces/static/signin.xhtml</form-error-page>
    </form-login-config>
   </login-config>

  	<security-role>
 <role-name>ADMIN</role-name>
 </security-role>

	<security-role>
 <role-name>FOURNISSEUR</role-name>
 </security-role>
 
 	<security-role>
 <role-name>SECRETAIRE</role-name>
 </security-role>
   
</web-app>